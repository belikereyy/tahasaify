    </div>

    <button id="submitBtn" type="button">Calculate Result</button>
    <div id="result" aria-live="polite"></div>
  </div>

  <script>
    'use strict';

    // Helper function to show results
    function showResult(text, colorClass) {
      const r = document.getElementById('result');
      r.classList.remove('red', 'yellow', 'blue', 'green');
      r.classList.add(colorClass);
      r.textContent = text;
    }

    function calculate() {
      const boxes = document.querySelectorAll('.box');
      let total = 0;
      let filled = 0;
      let juzHaliMark = null;

      for (const el of boxes) {
        const raw = el.value;

        if (raw !== '') {
          const n = Number(raw);

          // Validation (ensuring 1-10 range)
          if (Number.isNaN(n) || n < 1 || n > 10) {
            showResult('Error: Marks must be valid numbers between 1 and 10.', 'red');
            return;
          }

          if (el.id === 'box1') {
            juzHaliMark = n;
          }

          total += n;
          filled++;
        }
      }

      if (filled === 0) {
        showResult('Please enter at least one mark.', 'red');
        return;
      }

      // Calculation: (Average Mark out of 10) * 10 = Percentage out of 100
      let percentage = (total / filled) * 10;
      percentage = Math.max(0, Math.min(100, percentage));
      const percentageText = percentage.toFixed(2) + '%';
      
      let remark = '';
      let colorClass = '';
      
      // ðŸ›‘ CRITICAL CHECK: Juz Hali Mark 1 (box1) must be 6 or higher
      if (juzHaliMark !== null && juzHaliMark < 6) {
         // Display percentage AND the critical remark
         const text = `Percentage: ${percentageText} â€” Remark: Hifz Mazbut Karo (Juz Hali too low: ${juzHaliMark})`;
         showResult(text, 'red');
         return;
      }

      // Conditional Logic (Range checks for standard evaluation)
      if (percentage >= 87) { 
        remark = '3 Pages';
        colorClass = 'green';
      } else if (percentage >= 77) { 
        remark = '2 Pages';
        colorClass = 'blue';
      } else if (percentage >= 70) { 
        remark = '1 Page';
        colorClass = 'yellow';
      } else { 
        remark = 'Hifz Mazbut Karo';
        colorClass = 'red';
      }

      // Standard result output
      const text = `Percentage: ${percentageText} â€” Remark: ${remark}`;
      showResult(text, colorClass);
    }

    // Wire button after DOM ready
    document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('submitBtn').addEventListener('click', calculate);
    });
  </script>
</body>
